<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"

    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/stepTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: Terms  Clauses"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- Terms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Terms"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/generalTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:minHeight="100dp"
            android:textSize="14sp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:hint="Write general contract terms here"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences|textAutoComplete" />

        <!-- Special Clauses -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Clauses (Optional)"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/specialClauses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:background="@drawable/edittext_background"
            android:minHeight="100dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:hint="Write any special clauses here"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences|textAutoComplete" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/prevBtnStep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/textColor2"
                android:background="@drawable/btn_common_bg"
                android:layout_marginTop="24dp"
                android:padding="14dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextBtnStep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:text="Next..."
                android:textAllCaps="false"
                android:background="@drawable/btn_common_bg"
                android:textColor="@color/textColor2"
                android:layout_marginTop="24dp"
                android:padding="14dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
