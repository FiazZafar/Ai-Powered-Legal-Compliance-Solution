<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardElevation="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="5dp"
    android:minHeight="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/clauseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:text="Title"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/clauseBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:text="Title"
            android:textStyle="normal"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@id/clauseCopyBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clauseTitle"/>
        <TextView
            android:id="@+id/clauseTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timestamp"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clauseBody"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:id="@+id/clauseCopyBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/content_copy_24px"
            android:background="@android:color/transparent"
            app:tint="@color/icons_bg"
            android:visibility="visible"
            android:layout_marginEnd="4dp"
            android:layout_gravity="bottom|end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/clauseTitle"
            app:layout_constraintBottom_toBottomOf="@+id/clauseTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>